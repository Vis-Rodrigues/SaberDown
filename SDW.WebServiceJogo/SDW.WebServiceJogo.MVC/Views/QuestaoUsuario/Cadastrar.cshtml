@model SDW.WebServiceJogo.MVC.Models.QuestaoUsuario

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Cadastrar Questão Usuário</h4>
        @Helper.Mensagem(@TempData["msg"])
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.QuestaoId, "QuestaoId", htmlAttributes: new { @class = "form-control" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.QuestaoId)
                @Html.ValidationMessageFor(model => model.QuestaoId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.UsuarioId, "UsuarioId", htmlAttributes: new { @class = "form-control" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.UsuarioId)
                @Html.ValidationMessageFor(model => model.UsuarioId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Acerto, htmlAttributes: new { @class = "form-control" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Acerto)
                    @Html.ValidationMessageFor(model => model.Acerto, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
