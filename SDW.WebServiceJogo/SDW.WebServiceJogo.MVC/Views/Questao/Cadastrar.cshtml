@model SDW.WebServiceJogo.MVC.Models.Questao

<h3>Cadastro de Questão</h3>

@Helper.Mensagem(@TempData["msg"])

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(q => q.Descricao)
        @Html.TextBoxFor(q => q.Descricao, new {@class="form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(q => q.Categoria)
        @Html.DropDownListFor(q => q.CategoriaId, ViewBag.Categorias as SelectList, "Selecione", new {@class="form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </div>
}
